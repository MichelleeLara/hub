---
interface Props {
  Title: string;
  Description: string;
  colors?: Array<{
    color: string;
    position?: string; // top-left, top-right, bottom-left, bottom-right, center
  }> | string;
}

const { Title, Description, colors = [] } = Astro.props;

// Convertir colors a array de objetos si es string o array simple
const colorArray = Array.isArray(colors) 
  ? colors.map(c => typeof c === 'string' ? { color: c } : c)
  : typeof colors === 'string' 
    ? [{ color: colors }] 
    : [];

// Posiciones predeterminadas para hasta 4 colores
const defaultPositions = [
  'top-left',
  'top-right',
  'bottom-left',
  'bottom-right'
];

const getPosition = (position: string) => {
  const positions = {
    'top-left': 'translate(-50%, -50%)',
    'top-right': 'translate(50%, -50%)',
    'bottom-left': 'translate(-50%, 50%)',
    'bottom-right': 'translate(50%, 50%)',
    'center': 'translate(0%, 0%)'
  };
  return positions[position] || 'translate(0, 0)';
};
---

<div class="tech-card rounded-xl flex gap-1 items-center py-4 px-4 justify-center bg-[#1a1a1a] overflow-hidden relative">
  <div class="flex flex-col gap-1 items-center justify-center">
    <div class="icon-container">
      <div class="icon-wrapper">
        <slot name="icon" />
      </div>
    </div>

   
    
    <div class="relative z-30 text-center flex flex-col gap-0.5">
      <h4 class="font-semibold text-secondary text-sm">{Title}</h4>
      <p class="text-xs text-terteary font-medium">{Description}</p>
    </div>
  </div>
</div>

<style>
  .tech-card {
    container-type: inline-size;
  }

  .icon-container {
    width: 48px;
    height: 48px;
    position: relative;
    display: grid;
    place-items: center;
    overflow: hidden;
  }

  .icon-wrapper {
    width: 28px;
    height: 28px;
    display: grid;
    place-items: center;
    position: relative;
    z-index: 2;
  }

  .blur-shadow {
    position: absolute;
    width: 50px;
    height: 50px;
    background: var(--shadow-color);
    filter: blur(40px);
    /* opacity: 0.2; */
    border-radius: 50%;
    transform: var(--shadow-transform);
    /* transition: opacity 0.3s ease; */
  }

  /* Posicionamiento espec√≠fico para cada esquina */
  .blur-shadow.top-left {
    top: 45%;
    left: 45%;
  }

  .blur-shadow.top-right {
    top: 45%;
    left: 55%;
  }

  .blur-shadow.bottom-left {
    top: 55%;
    left: 45%;
  }

  .blur-shadow.bottom-right {
    top: 55%;
    left: 55%;
  }

  .blur-shadow.center {
    top: 50%;
    left: 50%;
  }

  /* Hover effect */
  .tech-card:hover .blur-shadow {
